#!/usr/bin/env ruby

def getCommandlineArgument(argname)
    args = {}
    ARGV.each do |arg|
        matcher = /^([^=]+)=(.+)$/.match(arg)
        if (matcher) then
            args[matcher[1]] = matcher[2]
        else
            if (arg == argname) then
                args[arg] = true
            end
        end
    end
    args[argname]
end

config = {
    pid: getCommandlineArgument('--pid'),
    log: getCommandlineArgument('--log'),
    daemon: !getCommandlineArgument('--daemon').nil?,
    main: getCommandlineArgument('--main')
}

p = [
    File.dirname(__FILE__),
    '..',
    'src'
]

$LOAD_PATH.unshift(File.expand_path(File.join(p)))
require 'server'

server = Server.new(config)
server.start
