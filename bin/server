#!/usr/bin/env ruby
# frozen_string_literal: true

def commandline_argument(argname)
  args = {}
  ARGV.each do |arg|
    matcher = /^([^=]+)=(.+)$/.match(arg)
    if matcher
      args[matcher[1]] = matcher[2]
    elsif arg == argname
      args[arg] = true
    end
  end
  args[argname]
end

config = {
  pid: commandline_argument('--pid'),
  log: commandline_argument('--log'),
  daemon: !commandline_argument('--daemon').nil?,
  main: commandline_argument('--main')
}

p = [
  File.dirname(__FILE__),
  '..',
  'src'
]

$LOAD_PATH.unshift(File.expand_path(File.join(p)))
require 'server'

server = Server.new(config)
server.start
